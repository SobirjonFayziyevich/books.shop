<%- include("includes/header") %>

<link rel="stylesheet" type="text/css" href="/css/login.css">

<!--(onsubmit return validateSignUpForm)biz kiritgan maulotlarni mantiqini tekshirsin-->
<body>
<form
        onsubmit="return validateSignUpForm()"
        class="login_container"
        action="/resto/signup"
        method="POST"
        enctype="multipart/form-data"
>
    <div class="login_frame" style="width: 650px; height: 730px">

        <div class="login_top">
            <span>Sign up</span>
            <div>
                Return to homepage
                <a href="/resto" style="color: #6440fb">Home</a>
            </div>
            <p>
                Are you registered?
                <a href="/resto/login" style="color: #6440fb">Login</a>
            </p>
        </div>

        <div class="sign-input_frame">
            <div class="sign_up_frame">
                <label>Username</label>
                <input
                        type="text"
                        name="mb_nick"
                        class="mb_nick"
                        placeholder="Username"
                        value=""
                        required

                />
            </div>
            <div class="sign_up_frame">
                <label>Phone number</label>
                <input
                        type="text"
                        name="mb_phone"
                        class="mb_phone"
                        placeholder="Phone number"
                        value=""
                        required

                />
            </div>
        </div>

        <div class="sign-input_frame">
            <div class="sign_up_frame">
                <label>Password</label>
                <input
                        type="password"
                        name="mb_password"
                        class="mb_password"
                        placeholder="Enter the password"
                        value=""
                        required

                />
            </div>
            <div class="sign_up_frame">
                <label>Re-enter the password</label>
                <input
                        type="password"
                        name="mb_confirm_password"
                        class="mb_confirm_password"
                        placeholder="Re-enter the password"
                        value=""
                        required


                />
            </div>
        </div>

        <div class="login_input_frame">
            <div class="media_frame">
                <img class="upload_img_frame" src="/images/default_resto.jpg"/>
                <div class="upload_container">
                    <span class="media_text">Book Picture</span>
                    <div class="filebox bs3-primary preview-image">
                        <input
                                class="upload-name"
                                value="Choose Picture"
                                disabled="disabled"
                        />
                        <label for="input_file"> Upload image </label>
                        <input
                                type="file"
                                id="input_file"
                                name="book_img"
                                class="upload-hidden form-control-file book_img"
                        />
                    </div>
                    <p class="thumbnail_desc">
                        Enter a picture of the book.<br/> Important instructions: .jpg,
                        .jpeg or .png. <br/>
                    </p>
                </div>
            </div>
        </div>
        <button class="login_btn btn" name="signup" type="submit">
            Sign up
        </button>

    </div>
</form>


<script>

    $(function () {
        let fileTarget=$(".filebox .upload-hidden");
        let filename="";
        fileTarget.on("change", function () {
            if (window.FileReader) {
                const uploading_file=$(this)[0].files[0];
                const fileType=uploading_file["type"];
                const validImageTypes=["image/jpg", "image/jpeg", "image/png"];
                if (!validImageTypes.includes(fileType)) {
                    alert(
                        "Please upload images in allowed format: jpg, jpeg va png!"
                    );
                } else {
                    if (uploading_file) {
                        console.log(URL.createObjectURL(uploading_file));
                        $(".upload_img_frame")
                            .attr("src", URL.createObjectURL(uploading_file))
                            .addClass("success")
                    }
                    filename=uploading_file.name
                }
            }

            $(this).siblings(".upload-name").val(filename);
        });
    });

    function validateSignUpForm() {
        const mb_nick=$(".mb_nick").val();
        alert(`mb_nick: ${mb_nick}`); 

        const mb_phone=$(".mb_phone").val();
        const mb_password=$(".mb_password").val();
        const mb_confirm_password=$(".mb_confirm_password").val();
        const book_img=$(".book_img").get(0).files[0] ?? null;


        if (mb_nick == '' ||
            mb_phone == '' ||
            mb_password == '' ||
            mb_confirm_password == ''
        ) {
            alert(`Please enter all information!`)
            return false
        } else if (mb_password !== mb_confirm_password) {
            alert(`Please enter the correct password!`)
            return false
        }

        if (!book_img) {
            alert(`Please upload image!`)
            return false
        }
        return true;
    }
</script>
</body>


<%- include("includes/footer") %>